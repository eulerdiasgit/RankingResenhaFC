<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_iv_spinner_loginUser"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/image_circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_with_name" />

    <TextView
        android:id="@+id/item_tv_spinner_loginUser_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Neuber Dilma"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_iv_spinner_loginUser"
        app:layout_constraintTop_toTopOf="@+id/item_iv_spinner_loginUser" />

    <TextView
        android:id="@+id/item_tv_spinner_loginUser_cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presidenta"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/item_tv_spinner_loginUser_nome"
        app:layout_constraintStart_toStartOf="@+id/item_tv_spinner_loginUser_nome"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_spinner_loginUser_nome" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>